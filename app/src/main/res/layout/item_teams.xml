<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/teal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/baseline_groups_24"
            />

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_marginLeft="30dp"
            android:text="id"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/id_txt"
            android:text="Name"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/division_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_txt"
            android:layout_marginLeft="30dp"
            android:text="Division"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_txt"
            android:layout_below="@+id/division_txt"
            android:layout_alignLeft="@+id/division_txt"
            android:layout_marginTop="10dp"
            android:text="City"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>